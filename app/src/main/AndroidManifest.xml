<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ng.com.techdepo.bakingapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StepsActivity"
            android:label="@string/title_activity_steps"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ng.com.techdepo.bakingapp.MainActivity" />
        </activity>
        <activity
            android:name=".StepsDetailsActivity"
            android:label="@string/title_activity_steps_details"
            android:parentActivityName=".StepsActivity"
            android:theme="@style/AppTheme">
            <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="ng.com.techdepo.bakingapp.StepsActivity" /></activity>
    </application>

</manifest>